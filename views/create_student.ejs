<body>

    <h2>SquareOne students Form</h2>

    <% for (stu of student){%>
    <li>
        <%= stu.name %>
    </li>
    <% } %>

    <button onclick="document.getElementById('id01').style.display='block'" style="width:auto;">Click me!</button>

    <div id="id01" class="modal">
        <span onclick="document.getElementById('id01').style.display='none'" class="close"
            title="Close Modal">&times;</span>
        <form class="modal-content" action="/students/create" method="POST">
            <div class="container">
                <h1>Sign Up</h1>
                <p>Please fill in this form to create an account.</p>
                <hr>
                <label for="name"><b>Name</b></label>
                <input type="text" placeholder="Enter Name" name="name" required>

                <label for="email"><b>Email</b></label>
                <input type="text" placeholder="Enter Email" name="email" required>

                <label for="phone"><b>Phone</b></label>
                <input type="number" placeholder="Enter Phone" name="phone" required><br>

                <label for="batch"><b>Batch</b></label>
                <input type="text" placeholder="Enter Batch" name="batch" required>

                <label for="college"><b>College</b></label>
                <input type="text" placeholder="Enter College" name="college" required>

                <label for="placed"><b>Is Placed?</b></label>
                <input type="text" placeholder="Is Placed?" name="placed" required>

                <label for="DSA"><b>DSA completion percentage</b></label>
                <input type="number" placeholder="Completion(in percentage)" name="DSA" required>

                <label for="WEBD"><b>WebD completion percentage</b></label>
                <input type="number" placeholder="Completion(in percentage)" name="WEBD" required>

                <label for="react"><b>React completion percentage</b></label>
                <input type="number" placeholder="Completion(in percentage)" name="react" required>
            </div><br>

            <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>

            <div class="clearfix">
                <button type="button" onclick="document.getElementById('id01').style.display='none'"
                    class="cancelbtn">Cancel</button>
                <button type="submit" class="signupbtn">Sign Up</button>
            </div>
    </div>
    </form>
    </div>


    <h2>Interview Form</h2>

    <% for (inter of interviews){%>
    <li>
        <a href="/results/show/?company=<%= inter.company %>"><%= inter.company %></a>

        <button onclick="document.getElementById('id<%-inter.id%>').style.display='block'" style="width:auto;">Click
            me!</button>

        <div id="id<%-inter.id%>" class="modal">
            <span onclick="document.getElementById('id<%-inter.id%>').style.display='none'" class="close"
                title="Close Modal">&times;</span>
            <form class="modal-content" action="/interviews/allocate/?company=<%= inter.company %>" method="POST">
                <div class="container">
                    <h1>Sign In</h1>
                    <p>Please fill in this form to sign in your account.</p>
                    <hr>

                    <label for="student"><b>Student</b></label>
                    <input type="text" placeholder="Enter Student" name="student" required>

                    <p>By signing in an account you agree to our <a href="#" style="color:dodgerblue">Terms &
                            Privacy</a>.
                    </p>

                    <div class="clearfix">
                        <button type="button" onclick="document.getElementById('id01').style.display='none'"
                            class="cancelbtn">Cancel</button>
                        <button type="submit" class="signupbtn">Sign In</button>
                    </div>
                </div>
            </form>
        </div>
    </li>
    <% } %>

    <button onclick="document.getElementById('id02').style.display='block'" style="width:auto;">Click me!</button>

    <div id="id02" class="modal">
        <span onclick="document.getElementById('id02').style.display='none'" class="close"
            title="Close Modal">&times;</span>
        <form class="modal-content" action="/interviews/create-interview" method="POST">
            <div class="container">
                <h1>Sign In</h1>
                <p>Please fill in this form to sign in your account.</p>
                <hr>

                <label for="company"><b>Company Name</b></label>
                <input type="text" placeholder="Enter Company Name" name="company" required>

                <label for="date"><b>Date</b></label>
                <input type="date" placeholder="Enter Date" name="date" required>


                <p>By signing in an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.
                </p>

                <div class="clearfix">
                    <button type="button" onclick="document.getElementById('id01').style.display='none'"
                        class="cancelbtn">Cancel</button>
                    <button type="submit" class="signupbtn">Sign In</button>
                </div>
            </div>
        </form>
    </div>

    <a href="/results/create-csv">Click to download</a>


</body>

</html>